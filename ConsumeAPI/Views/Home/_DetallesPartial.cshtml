<script type="text/template" id='heroDetalleTemplate'>
	<div class="modal-header">
		<div class="form-group row">
			<h4 class="pull-left">Nombre del personaje: <%= name.toUpperCase() %></h4>
			<h6 class="modal-title">Información del personaje (Detalles en inglés)</h6>
		</div>
		<div class="form-group row">
			
		</div>
		<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<div class="modal-body">   
		<div class="">
			<div class="card">
				<div class="card-header">
					<h5 class="my-4">
						Nombre Real: <%= biography.full_name %>
                    </h5>					
				</div>
				<div class="card-body">					
					<!-- Page Content -->
                    <div class="container">
                        <!-- Portfolio Item Row -->
                        <div class="row">  
                          <div class="col-md-8">
                            <img class="img-fluid" src="<%= image.url %>" alt="">
                          </div>  
                          <div class="col-md-4">                            
                            <h3 class="my-3">Biografía</h3>
                            <ul>
                              <li>Alter-Egos: <%= biography.alter_egos %></li>
                              <li>Otros Alias: <%= biography.full_name %></li>
                              <li>Lugar de Nacimiento: <%= biography.place_of_birth %></li>
                              <li>Primera Aparición: <%= biography.first_appearance %></li>
							  <li>Editorial: <%= biography.publisher %></li>
							  <li>Tipo de Personaje: <%= biography.alignment %></li>
                            </ul>

							<h3 class="my-3">Apariencía Física</h3>
                            <ul>
                              <li>Genero: <%= appearance.gender %></li>
                              <li>Raza: <%= appearance.race %></li>
                              <li>Altura: <%= appearance.height %></li>
                              <li>Peso: <%= appearance.weight %></li>
							  <li>Color de Ojos: <%= appearance.eye_color %></li>
							  <li>Color de Cabello: <%= appearance.hair_color %></li>
                            </ul>

							<h3 class="my-3">Conexiones</h3>
                            <ul>
                              <li>Grupo de Afiliación: <%= connections.group_affiliation %></li>
                              <li>Familia: <%= connections.relatives %></li>                             
                            </ul>
                          </div>

  
                        </div>
                        <!-- /.row -->
  
                        
  
                      </div>
                      <!-- /.container -->
  
				</div>
			</div>
		</div>
	</div>
	<div class="modal-footer">		
		<button type="button" class="btn btn-square btn-secondary" data-bs-dismiss="modal">Regresar</button>
	</div>	
</script>
